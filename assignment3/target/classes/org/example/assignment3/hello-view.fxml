<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.assignment3.PokemonView">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="Enter Pokemon Name or Number:"/>
            <TextField fx:id="pokemonNameField"/>
            <Button text="Get Pokemon Info" onAction="#handleGetPokemonInfo"/>
            <GridPane fx:id="pokemonInfoGrid" hgap="10" vgap="10" visible="false" style="-fx-border-color: black; -fx-padding: 10;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </GridPane>
            <Label text="Attacks:" fx:id="attacksLabel" visible="false"/>
            <ScrollPane fx:id="movesScrollPane" fitToWidth="true" visible="false" prefHeight="200">
                <VBox fx:id="movesContainer" spacing="5" style="-fx-padding: 10;"/>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
